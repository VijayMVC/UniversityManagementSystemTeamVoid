@{
    ViewBag.Title = "Add Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/css/style.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <hr />
            <h2 class="header-2">Save Course</h2>
            <hr />

            @if (ViewBag.Mgs != null)
            {
                <p style="font-size: 30px; color: olivedrab">@ViewBag.Mgs</p>

            }

            <form id="saveCourseForm" method="POST">
                <div class="form-group">
                    <label for="Code">Code</label>
                    <input type="text" class="form-control" id="Code" name="Code" placeholder="Enter a course code">
                </div>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter a course name">
                </div>
                <div class="form-group">
                    <label for="Credit">Credit</label>
                    <input type="text" class="form-control" id="Credit" name="Credit" placeholder="Enter Credit">
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    <textarea class="form-control" id="Description" name="Description" placeholder="Write Somethings about this course"></textarea>
                </div>
                <div class="form-group">
                    <label for="DepartmentId">Department</label>
                    <select id="DepartmentId" name="DepartmentId">
                        <option value="">Select Department </option>

                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept.Id">@dept.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="SemesterId">Semester</label>
                    <select id="SemesterId" name="SemesterId">
                        <option value="">Select Semester </option>

                        @foreach (var dept in ViewBag.Semesters)
                        {
                            <option value="@dept.Id">@dept.Name</option>
                        }
                    </select>

                </div>
                <button type="submit" class="btn btn-default" style="margin-top: 20px; margin-left: 220px; background-color: saddlebrown; color: white">Save</button>
            </form>
        </div>
    </div>
</div>

@section scripts
{

    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>

    <script>
        $(document).ready(function () {
            $("#saveCourseForm").validate({
                rules: {
                    Code: {
                        required: true,
                        minlength: 5
                    },
                    Name: "required",
                    Description: "required",
                    Credit: {
                        required: true,
                        number: true,
                        range: [0.5, 5.00]

                    },

                    DepartmentId: "required",
                    SemesterId: "required"

                },
                messages: {
                    Code: {
                        required: "Please enter a valid Course Code!",
                        minlength: "Code must be at least 5 charecter! !"
                    },

                    Name: "Please enter a valid Course Name!",
                    Description: "Write something about this course!",
                    Credit: {
                        required: "Credit is required for this Course!",
                        number: "Please! Enter numeric number only.",
                        range: "Credit must be beween 0.5 and 5.00."
                    },
                    DepartmentId: "Please select related department!",
                    SemesterId: "Please select related semister!"
                }
            });
        });
    </script>

}


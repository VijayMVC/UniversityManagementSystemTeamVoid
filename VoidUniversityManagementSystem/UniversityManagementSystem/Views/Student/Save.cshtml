@model UniversityManagementSystem.Models.Student

@{
    ViewBag.Title = "Add Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet"/>
<link href="~/Content/css/style.css" rel="stylesheet"/>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <hr />
            <h2 class="header-2">Register Student</h2>
            <hr />

            @if (ViewBag.Message != null)
            {

                <p class="body-content" style="font-size:20px;color:blue; font-style:italic">
                    @foreach (var ch in ViewBag.Message)
                    {

                        if (ch == ';')
                        {
                            <br />
                        }
                        else
                        {
                            @ch
                        }
                    }
                </p>

            }


            <form id="saveStudentForm" method="POST">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="text" class="form-control" id="Email" name="Email" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="Contact">Contact No. </label>
                    <input type="text" class="form-control" id="Contact" name="Contact" placeholder="Enter Contact No">
                </div>
                <div class="form-group">
                    <label for="RegDate">Date</label>
                    <input type="text" class="form-control" id="RegDate" name="RegDate" value="@DateTime.Now.ToShortDateString()">
                </div>
                <div class="form-group">
                    <label for="Address">Address</label>
                    <input type="text" class="form-control" id="Address" name="Address" placeholder="Enter Address">
                </div>
                <div class="form-group">
                    <label for="DepartmentId">Department</label>
                    <select id="DepartmentId" name="DepartmentId" class="form-control">
                        <option value="">Select Department</option>

                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept.Id">@dept.Name</option>
                        }
                    </select>

                </div>
                <button type="submit" class="btn btn-default" style="margin-left: 198px; background-color: saddlebrown; margin-top: 20px; color: white">Register</button>

            </form>
        </div>
    </div>
</div>



@section Scripts {

    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>

    <script>
        $(document).ready(function () {
            $('#RegDate').datepicker();
            $("#saveStudentForm").validate({
                rules: {
                    Name: "required",
                    Email: {
                        required: true,
                        email: true
                    },
                    Contact: "required",
                    RegDate: "required",
                    Address: "required",
                    DepartmentId: "required"

                },
                messages: {
                    Name: "Please enter the student Name",
                    Email: {
                        required: "Please email address is required",
                        email: "Please enter a correct email address"
                    },
                    Contact: "Please enter the student contact",
                    RegDate: "Select date",
                    Address: "Address is required!",
                    DepartmentId: "Please select department"
                }
            });


        });
    </script>
}
